<h1>Task details</h1>

<h3><%= @task.title %></h3>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>

<%= link_to 'Edit task', edit_task_path %>
<%= link_to 'Back to tasks', tasks_path %>
<%= link_to 'Delete Task',
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>


