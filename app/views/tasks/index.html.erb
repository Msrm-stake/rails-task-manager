<div class="nav" style="background-color: #e6226e;
    color: white;
    padding: 10px 20px;
    font-size: 12px;">
  <h1 style="font-family: arial;">All Tasks</h1>
</div>


<div class="container" style="padding: 10px 20px;">
  <div class="card" style="box-shadow: 1px 1px 2px 1px rgba(0, 0, 0, 0.3);
    border-radius: 5px;
    padding: 10px;">
    <% @tasks.each do |task| %>
      <h2>
  <%= link_to task.title, task_path(task) %></h2>
      <p><%= task.details %></p>
      <p><%= task.completed %></p>
    <% end %>
  </div>
  
</div>

<div style="box-shadow: 1px 1px 2px 1px rgba(0, 0, 0, 0.3);
    border-radius: 5px;
    padding: 10px 20px;"><%= link_to 'Create a new task', tasks_new_path %></div>

